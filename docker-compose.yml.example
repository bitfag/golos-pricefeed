version: "2.2"
services:
  golos:
    image: golos-0.17.0-lowmem:latest
    #environment:
    #  STEEMD_EXTRA_OPTS: --replay
    ports:
      - "2001:2001"
      - "8090:8090"
      - "8091:8091"
    volumes:
      - "/dev/shm:/shm"
      - "/srv/golos:/var/lib/golosd"
      - "./config.ini:/etc/golosd/config.ini"

  pricefeed:
    environment:
      NODE: ws://golos:8091
      WITNESS: foo
      KEY: PRIVATE-ACTIVE-KEY
      SOURCE: bitshares
      NODE_BTS: "\n
        - wss://eu.nodes.bitshares.ws\n
        - wss://bitshares.openledger.info/ws\n
        - wss://citadel.li/node\n
        - wss://api-ru.bts.blckchnd.com\n
        - wss://api.bts.blckchnd.com"
      MARKETS: "\n
        - RUDEX.GOLOS/BTS\n
        - RUDEX.GOLOS/RUDEX.BTC\n
        - RUDEX.GOLOS/RUBLE\n
        - RUDEX.GOLOS/USD\n
        - RUDEX.GOLOS/CNY"
      METRIC: weighted_average
      K: 1
      DEPTH_PCT: 20
      THRESHOLD_PCT: 15
    image: vvk123/golos-witness-tools
    depends_on:
      - golos
    command: ./update_price_feed.py --monitor

  monitor:
    environment:
      NODE: ws://golos:8091
      WITNESS: foo
      KEY: PRIVATE-ACTIVE-KEY
      WITNESS_PUBKEY: SIGNING-KEY-FOR-THIS-NODE
      MISS_WINDOW: 3600
      ALLOWED_MISSES: 1
    image: vvk123/golos-witness-tools
    command: ./witness_monitor.py
    depends_on:
      - golos
